# MongoDB Connection (Required)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# NextAuth Configuration
NEXTAUTH_SECRET=your-super-secret-key-here-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Admin Panel Access
ADMIN_PASSWORD=your-admin-password-here

# Email Configuration (Optional - for notifications)
EMAIL_SERVER=smtp://user:pass@smtp.example.com:587
EMAIL_FROM=noreply@yourdomain.com

# Site Configuration
SITE_URL=http://localhost:3000
SITE_NAME=aggroNATION

# RSS Update Interval (in minutes)
RSS_UPDATE_INTERVAL=30

# Social Media APIs (Optional)
TWITTER_BEARER_TOKEN=your-twitter-api-bearer-token
YOUTUBE_API_KEY=your-youtube-api-key
GITHUB_TOKEN=your-github-personal-access-token

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Content Intelligence (Optional)
OPENAI_API_KEY=your-openai-api-key-for-content-scoring
CONTENT_SCORING_ENABLED=false

# Breaking News Detection
BREAKING_NEWS_THRESHOLD=85
TRENDING_VELOCITY_THRESHOLD=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
PLAUSIBLE_DOMAIN=yourdomain.com